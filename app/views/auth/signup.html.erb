<h1>Sign Up</h1>
<p>Already have an account? <%= link_to('Click here', login_path) %>.</p>
<p><%= flash[:notice] %></p>
<%= form_with url: signup_handler_path, method: :post do |form|%>
  <%= form.label :username, "Username" %>
  <br>
  <%= form.text_field :username %>
  <br>
  <%= form.label :password, "Password" %>
  <br>
  <%= form.password_field :password %>
  <br>
  <%= form.submit "Sign Up" %>
<% end %>
