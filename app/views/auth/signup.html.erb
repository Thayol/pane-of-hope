<h1>Sign Up</h1>
<p>Already have an account? <%= link_to('Click here', login_path) %>.</p>
<p><%= flash[:notice] %></p>
<%= form_with url: signup_handler_path, method: :post do |form|%>
 
  <%= form.text_field :username , placeholder: "Username" %>
  <br>
  <%= form.password_field :password , placeholder: "Password" %>
  <br>
  <%= form.submit "Sign Up" %>
<% end %>
